// RUN: %sorac -emit-raw-ir %s | %filecheck %s

func int_literals() {
  // CHECK: %{{.+}} = constant 1 : i8
  1 as i8
  // CHECK: %{{.+}} = constant 2 : i16
  2 as i16
  // CHECK: %{{.+}} = constant 3 : i32
  3 as i32
  // CHECK: %{{.+}} = constant 4 : i64
  4 as i64
  // CHECK: %{{.+}} = constant 5 : {{i64|i32}}
  5 as isize
  // CHECK: %{{.+}} = constant 6 : i8
  6 as u8
  // CHECK: %{{.+}} = constant 7 : i16
  7 as u16
  // CHECK: %{{.+}} = constant 8 : i32
  8 as u32
  // CHECK: %{{.+}} = constant 9 : i64
  9 as u64
  // CHECK: %{{.+}} = constant 10 : {{i64|i32}}
  10 as usize
}

func bool_literals() {
  // CHECK: %{{.+}} = constant 1 : i1
  true
  // CHECK: %{{.+}} = constant 0 : i1
  false
}

func float_literals() {
  // CHECK: %{{.+}} = constant 0.000000e+00 : f32
  0.0 as f32
  // CHECK: %{{.+}} = constant 1.000000e-01 : f64
  0.1 as f64
}