// RUN: %sorac-irgen -g %s | %filecheck %s

func int_literals() {
  // CHECK: %{{.+}} = constant 1 : i8  loc({{.*}}:[[@LINE+1]]:3)
  1 as i8
  // CHECK: %{{.+}} = constant 2 : i16 loc({{.*}}:[[@LINE+1]]:3)
  2 as i16
  // CHECK: %{{.+}} = constant 3 : i32 loc({{.*}}:[[@LINE+1]]:3)
  3 as i32
  // CHECK: %{{.+}} = constant 4 : i64 loc({{.*}}:[[@LINE+1]]:3)
  4 as i64
  // CHECK: %{{.+}} = constant 5 : {{i64|i32}} loc({{.*}}:[[@LINE+1]]:3)
  5 as isize
  // CHECK: %{{.+}} = constant 6 : i8  loc({{.*}}:[[@LINE+1]]:3)
  6 as u8
  // CHECK: %{{.+}} = constant 7 : i16 loc({{.*}}:[[@LINE+1]]:3)
  7 as u16
  // CHECK: %{{.+}} = constant 8 : i32 loc({{.*}}:[[@LINE+1]]:3)
  8 as u32
  // CHECK: %{{.+}} = constant 9 : i64 loc({{.*}}:[[@LINE+1]]:3)
  9 as u64
  // CHECK: %{{.+}} = constant 10 : {{i64|i32}} loc({{.*}}:[[@LINE+1]]:3)
  10 as usize
}

func bool_literals() {
  // CHECK: %{{.+}} = constant 1 : i1 loc({{.*}}:[[@LINE+1]]:3)
  true
  // CHECK: %{{.+}} = constant 0 : i1 loc({{.*}}:[[@LINE+1]]:3)
  false
}

func float_literals() {
  // CHECK: %{{.+}} = constant 0.000000e+00 : f32 loc({{.*}}:[[@LINE+1]]:3)
  0.0 as f32
  // CHECK: %{{.+}} = constant 1.000000e-01 : f64 loc({{.*}}:[[@LINE+1]]:3)
  0.1 as f64
}