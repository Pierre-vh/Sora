// RUN: sorac -emit-raw-ir -g %s | FileCheck %s

func unaryMinusInt() {
  // Constant tests: the generator should just modify the constants in place.

  // CHECK: {{%.*}} = constant -1   {{.*}} loc({{.*}}:[[@LINE+1]]:4)
  -1
  // CHECK: {{%.*}} = constant -1   {{.*}} loc({{.*}}:[[@LINE+1]]:5)
  -(1)
  // CHECK: {{%.*}} = constant 10   {{.*}} loc({{.*}}:[[@LINE+1]]:5)
  --10
  // CHECK: {{%.*}} = constant 10   {{.*}} loc({{.*}}:[[@LINE+1]]:7)
  -(-(10))
  // CHECK: {{%.*}} = constant -100 {{.*}} loc({{.*}}:[[@LINE+1]]:6)
  ---100
  // CHECK: {{%.*}} = constant -100 {{.*}} loc({{.*}}:[[@LINE+1]]:9)
  -(-(-(100)))

  // TODO: Test on variables
}

func unaryMinusFlt() {
  // Constant tests: the generator should just modify the constants in place.

  // CHECK: {{%.*}} = constant -1.000000e+00  {{.*}} loc({{.*}}:[[@LINE+1]]:4)
  -1.0
  // CHECK: {{%.*}} = constant -1.000000e+00  {{.*}} loc({{.*}}:[[@LINE+1]]:5)
  -(1.0)
  // CHECK: {{%.*}} = constant 1.000000e+01   {{.*}} loc({{.*}}:[[@LINE+1]]:5)
  --10.0
  // CHECK: {{%.*}} = constant 1.000000e+01   {{.*}} loc({{.*}}:[[@LINE+1]]:7)
  -(-(10.0))
  // CHECK: {{%.*}} = constant -1.000000e+02  {{.*}} loc({{.*}}:[[@LINE+1]]:6)
  ---100.0
  // CHECK: {{%.*}} = constant -1.000000e+02  {{.*}} loc({{.*}}:[[@LINE+1]]:9)
  -(-(-(100.0)))


  // TODO: Test on variables
}

func unaryLNot() {
  // Constant tests: the generator should just modify the constants in place.
  // CHECK: {{%.*}} = constant 0  {{.*}} loc({{.*}}:[[@LINE+1]]:4)
  !true
  // CHECK: {{%.*}} = constant 0  {{.*}} loc({{.*}}:[[@LINE+1]]:5)
  !(true)
  // CHECK: {{%.*}} = constant 1  {{.*}} loc({{.*}}:[[@LINE+1]]:5)
  !!true
  // CHECK: {{%.*}} = constant 1  {{.*}} loc({{.*}}:[[@LINE+1]]:7)
  !(!(true))
  // CHECK: {{%.*}} = constant 0  {{.*}} loc({{.*}}:[[@LINE+1]]:6)
  !!!true
  // CHECK: {{%.*}} = constant 0  {{.*}} loc({{.*}}:[[@LINE+1]]:9)
  !(!(!(true)))
}
