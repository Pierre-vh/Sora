// RUN: %sorac-parse -verify -dump-parse %s | %filecheck %s

func assign() {
  // CHECK: BinaryExpr type=<null type> = (Assign) opLoc=line:7:5
  // CHECK-NEXT: DiscardExpr type=<null type> loc=line:7:3
  // CHECK-NEXT: UnresolvedDeclRefExpr type=<null type> ident=a loc=line:7:7
  _ = a
  // CHECK: BinaryExpr type=<null type> = (Assign) opLoc=line:11:5
  // CHECK-NEXT: UnresolvedDeclRefExpr type=<null type> ident=a loc=line:11:3
  // CHECK-NEXT: UnresolvedDeclRefExpr type=<null type> ident=b loc=line:11:7
  a = b
  // CHECK: BinaryExpr type=<null type> = (Assign) opLoc=line:17:5
  // CHECK-NEXT: UnresolvedDeclRefExpr type=<null type> ident=a loc=line:17:3
  // CHECK-NEXT: BinaryExpr type=<null type> = (Assign) opLoc=line:17:9
  // CHECK-NEXT:  UnresolvedDeclRefExpr type=<null type> ident=b loc=line:17:7
  // CHECK-NEXT:  UnresolvedDeclRefExpr type=<null type> ident=c loc=line:17:11
  a = b = c
  // CHECK: BinaryExpr type=<null type> = (Assign) opLoc=line:25:5
  // CHECK-NEXT: UnresolvedDeclRefExpr type=<null type> ident=a loc=line:25:3
  // CHECK-NEXT: BinaryExpr type=<null type> = (Assign) opLoc=line:25:9
  // CHECK-NEXT:  UnresolvedDeclRefExpr type=<null type> ident=b loc=line:25:7
  // CHECK-NEXT:  BinaryExpr type=<null type> = (Assign) opLoc=line:25:13
  // CHECK-NEXT:   UnresolvedDeclRefExpr type=<null type> ident=c loc=line:25:11
  // CHECK-NEXT:   UnresolvedDeclRefExpr type=<null type> ident=d loc=line:25:15
  a = b = c = d
}

func badAssign() {
  {a=}    // expect-error: expected an expression after '='
  {a+=}   // expect-error: expected an expression after '+='
  {a-=}   // expect-error: expected an expression after '-='
  {a*=}   // expect-error: expected an expression after '*='
  {a/=}   // expect-error: expected an expression after '/='
  {a%=}   // expect-error: expected an expression after '%='
  {a<<=}  // expect-error: expected an expression after '<<='
  {a>>=}  // expect-error: expected an expression after '>>='
  {a&=}   // expect-error: expected an expression after '&='
  {a|=}   // expect-error: expected an expression after '|='
  {a^=}   // expect-error: expected an expression after '^='
  {a??=}  // expect-error: expected an expression after '??='
}