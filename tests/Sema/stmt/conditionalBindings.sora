    if let y = y {
      if let y = y {
        // CHECK: DeclRefExpr type=void loc=line:23:9 decl='y'@line:21:14
        y
      }
    }
    let z: maybe i32 = 0
    if let (x, y) = (z, z) { // expect-error: initializer for conditional binding must have a maybe type, not '(maybe i32, maybe i32)'
    
    }
